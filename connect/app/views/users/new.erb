<div class="signup_form">
  <h3>Sign up a new account</h3>

  <form class="form-inline" role="form" action="/users" method="post">
    <div class="form-group">
      <label for="username">Username:</label>
      <input type="text" name="user[username]" class="form-control" id="username" placeholder="Enter username">
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" name="user[password]" class="form-control" id="pwd" placeholder="Enter password">
    </div>
    <div class="form-group">
      <label for="username">Phone Number:</label>
      <input type="tel" name="user[phone_number]" class="form-control" id="phone_number" placeholder="555 555 5555">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
  <%= erb :"partials/_errors" %>
</div>
