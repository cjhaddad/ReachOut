<!-- form for a new connection -->
<div>
  Please provide a phone number at which a volunteer can reach you
  <form class="form-inline" role="form" action="/connections" method="POST">
    <div class="form-group">
      <label for="phone_number">Phone Number:</label>
      <input type="tel" name="phone_number" class="form-control" id="phone_number" placeholder="Enter phone number to contact you">
    </div>
    <div class="form-group">
      <label for="context">Context:</label>
      <textarea class="form-control" rows="5" cols="50" id="email" placeholder="What would you like to talk about? This will help us find the most suitable volunteer for you! If you'd rather not say, that's ok."></textarea>
    </div>
    <button type="submit" class="btn btn-default">Reach Out</button>
  </form>
  <%= erb :"partials/_errors" %>
</div>


