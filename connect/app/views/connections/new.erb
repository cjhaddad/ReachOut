<!-- form for a new connection -->
<div class="container" id="new-connection-form">
  <div class="jumbotron text-center">
    <h4>Please provide a phone number at which a volunteer can reach you</h4>
    <form class="form-horizontal" role="form" action="/connections" method="POST">
      <div class="form-group">
        <label for="phone_number" class="control-label col-sm-2">Phone Number:</label>
        <div class="col-sm-10">
          <input type="tel" name="phone_number" class="form-control" id="phone_number" placeholder="555 555 55555">
        </div>
      </div>
      <div class="form-group">
        <label for="context" class="control-label col-sm-2">Context:</label>
        <div class="col-sm-10">
          <textarea class="form-control" name="context" rows="5" cols="50" id="email" placeholder="What would you like to talk about? This will help us find the most suitable volunteer for you! If you'd rather not say, that's ok."></textarea>
        </div>
      </div>
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" id="reach-out-button" class="btn btn-default">Reach Out</button>
      </div>
    </form>
    <%= erb :"partials/_errors" %>
  </div>
</div>


